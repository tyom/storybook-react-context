{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "incremental": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "module": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "noEmitOnError": false,
    "verbatimModuleSyntax": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    //    "noUnusedLocals": true,
    "target": "es2022",
    "lib": ["es2020", "dom", "dom.iterable"],
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"]
}
